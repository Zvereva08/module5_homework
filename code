//задание7
let arr = [414,45,45,4556,84545,18,41,847,84,448,1]; 
let oddNum = 0; 
let evenNum = 0; 
for (let index = 0; index < arr.length; index++) { 
    if (arr[index] % 2 == 0) { 
        evenNum++; 
    } 
    else { 
        oddNum++; 
    } 
  if (arr[index] == null){
console.log (null)    
  }
} 
console.log(evenNum); 
console.log(oddNum);



